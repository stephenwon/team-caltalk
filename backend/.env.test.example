# Team CalTalk 테스트 환경 변수
# 이 파일을 .env.test로 복사하고 실제 값으로 변경하세요

# 환경 설정
NODE_ENV=test

# 서버 설정
PORT=3002

# 데이터베이스 설정 (테스트용)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=team_caltalk_test
DB_USER=postgres
DB_PASSWORD=your_test_password

# JWT 설정
JWT_SECRET=test-secret-key-for-jwt-tokens-change-this-in-production
JWT_EXPIRES_IN=24h

# Bcrypt 설정 (테스트 속도를 위해 낮춤)
BCRYPT_ROUNDS=10

# Rate Limiting 설정
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# CORS 설정
CORS_ORIGIN=http://localhost:5173

# 로깅 설정
LOG_LEVEL=error
