# Database Configuration (Vercel Postgres or External PostgreSQL)
DB_HOST=
DB_PORT=5432
DB_NAME=team_caltalk
DB_USER=
DB_PASSWORD=
DB_CONNECTION_STRING=

# JWT Configuration
JWT_SECRET=
JWT_EXPIRE=24h
JWT_REFRESH_SECRET=
